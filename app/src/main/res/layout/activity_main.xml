<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingTop="16dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.xavier.youtubedataapi.MainActivity">

    <EditText
        android:id="@+id/textVideo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/searchButton"
        android:nextFocusUp="@id/textVideo"
        android:nextFocusLeft="@id/textVideo"
        tools:maxLines="1" />
    <Button
        android:id="@+id/searchButton"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Search"
        />

    <ListView
        android:id="@+id/ListVideos"
        android:paddingBottom="16dp"
        android:paddingLeft="16dp"
        android:paddingRight="64dp"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textVideo"

        android:focusable="false"
        android:focusableInTouchMode="false" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ListVideos" />

</RelativeLayout>
